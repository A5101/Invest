@model Invest.Domain.Entities.RealEstate

@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cdbootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cdbootstrap/css/cdb.min.css" />
<script src="https://cdn.jsdelivr.net/npm/cdbootstrap/js/cdb.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/cdbootstrap/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/9d1d9a82d2.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

<script src="~/js/ckeditor/ckeditor.js"></script>

<div class="Edit d-block">
    <div class="pa-wrapper col-8 bg-dark text-white p-3 mx-auto shadow p-3 mb-5 rounded d-grid">
        <div class="pa-head mx-auto">
            <h1>@strTitle</h1>
        </div>
        <div class="pa-body mx-auto">
        </div>
    </div>
    <div class="pa-wrapper col-8 bg-dark text-white p-3 mx-auto shadow p-3 mb-5 rounded d-grid">
        <form asp-controller="RealEstate" asp-action="Edit" asp-route-name="@User.Identity.Name" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <h4>Адрес*</h4>
                <input type="text" class="form-control" asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>

            <div class="div-box">
                <h4>Стоимость квадратного метра*</h4>
                <input type="text" class="form-control" asp-for="Cost" />
                <span asp-validation-for="Cost"></span>
            </div>

            <div class="div-box">
                <h4>Этаж</h4>
                <input type="text" class="form-control" asp-for="Floor" />
                <span asp-validation-for="Floor"></span>
            </div>

            <div class="div-box">
                <h4>Номер квартиры</h4>
                <input type="text" class="form-control" asp-for="Number" />
                <span asp-validation-for="Number"></span>
            </div>

            <div class="div-box">
                <h4>Площадь*</h4>
                <input type="text" class="form-control" asp-for="Area" />
                <span asp-validation-for="Area"></span>
            </div>

            <div class="div-box">
                <h4>Применение*</h4>
                <input type="text" class="form-control" asp-for="Usage" />
                <span asp-validation-for="Usage"></span>
            </div>

            <div class="div-box">
                <h4>Тип*</h4>
                <input type="text" class="form-control" asp-for="Type" />
                <span asp-validation-for="Type"></span>
            </div>

            <div class="div-box">
                <h4>Описание</h4>
            <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <div class="div-box">
                <h4>Ближайшие места</h4>
                <input type="text" class="form-control" asp-for="NearPlaces" />
                <span asp-validation-for="NearPlaces"></span>
            </div>

            <div class="checkbox-group">
                <h4>Вредные производства</h4>
                <input type="checkbox" asp-for="NearWorsth" />
                <span asp-validation-for="NearWorsth"></span>
            </div>

            <div class="checkbox-group">
                <h4>С ремонтом</h4>
                <input type="checkbox" asp-for="Isrepaired" />
                <span asp-validation-for="Isrepaired"></span>
            </div>

            <div class="checkbox-group">
                <h4>Введен в эксплуатацию</h4>
                <input type="checkbox" asp-for="AreReady" />
                <span asp-validation-for="AreReady"></span>
            </div>

            <div class="div-box">
                <h4>Затраты (Название:Трата,)*</h4>
                <input type="text" class="form-control" asp-for="Expenses" />
                <span asp-validation-for="Expenses"></span>
            </div>

            <div class="div-box">
                <h4>Доходы*</h4>
                <input type="text" class="form-control" asp-for="Income" />
                <span asp-validation-for="Income"></span>
            </div>

            <button type="submit" class="btn btn-warning" style="width: 14rem;padding:
1rem;margin-top: 2rem;margin-left: 38%;">
                Отправить
            </button>
        </form>
    </div>
</div>