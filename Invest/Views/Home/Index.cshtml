                                else
                                {
                                    <div class="tekst_sverhu_kartinki_1 text-black p-2 border border-1 rounded bg-success text-white" style="padding-left: 0.8rem !important;padding-right: 0.9rem !important;border-radius: 2rem !important;padding-bottom: 0rem !important;">
                                        <p style="font-size:2rem" class="h2">@kol.RealEstate.Raiting.ToString("0.0")</p>
