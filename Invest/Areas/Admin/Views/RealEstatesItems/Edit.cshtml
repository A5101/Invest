@model Invest.Domain.Entities.RealEstate

@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h1>@strTitle</h1>
    <div class="admins">
        <form asp-area="Admin" asp-controller="RealEstatesItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Address"></label>
                <input asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>

            <div class="div-box">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" />
                <span asp-validation-for="Cost"></span>
            </div>

            <div class="div-box">
                <label asp-for="Floor"></label>
                <input asp-for="Floor" />
                <span asp-validation-for="Floor"></span>
            </div>

            <div class="div-box">
                <label asp-for="Number"></label>
                <input asp-for="Number" />
                <span asp-validation-for="Number"></span>
            </div>

            <div class="div-box">
                <label asp-for="Area"></label>
                <input asp-for="Area" />
                <span asp-validation-for="Area"></span>
            </div>

            <div class="div-box">
                <label asp-for="Usage"></label>
                <input asp-for="Usage" />
                <span asp-validation-for="Usage"></span>
            </div>

            <div class="div-box">
                <label asp-for="Type"></label>
                <input asp-for="Type" />
                <span asp-validation-for="Type"></span>
            </div>

            <div class="div-box">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" /></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <div class="div-box">
                <label asp-for="NearPlaces"></label>
                <input asp-for="NearPlaces" />
                <span asp-validation-for="NearPlaces"></span>
            </div>

            <div class="checkbox-group">
                <label asp-for="NearWorsth"></label>
                <input type="checkbox" asp-for="NearWorsth" />
                <span asp-validation-for="NearWorsth"></span>
            </div>

            <div class="div-box">
                <label asp-for="Raiting"></label>
                <input asp-for="Raiting" />
                <span asp-validation-for="Raiting"></span>
            </div>

            <div class="checkbox-group">
                <label asp-for="Isrepaired"></label>
                <input type="checkbox" asp-for="Isrepaired" />
                <span asp-validation-for="Isrepaired"></span>
            </div>

            <div class="checkbox-group">
                <label asp-for="AreReady"></label>
                <input type="checkbox" asp-for="AreReady" />
                <span asp-validation-for="AreReady"></span>
            </div>

            <div class="div-box">
                <label asp-for="Expenses"></label>
                <input asp-for="Expenses" />
                <span asp-validation-for="Expenses"></span>
            </div>

            <div class="div-box">
                <label asp-for="Income"></label>
                <input asp-for="Income" />
                <span asp-validation-for="Income"></span>
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>



<script>
    window.onload = function () {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Description)');
        newCKEdit.updateElement();
    }
</script>